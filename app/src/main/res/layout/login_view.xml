<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="@dimen/splash_screen_padding">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cold_image"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_gravity="top|center"
            android:scaleType="center"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/login"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/login_title_size"
            android:textColor="@color/icons"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/splash_screen_padding"
            android:text="@string/welcome_back"
            android:layout_gravity="center"
            android:textStyle="bold"
            style="?android:textAppearanceMedium"
            android:textColor="@color/icons"/>
    <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_gravity="bottom"
            android:background="@color/icons"
            android:textColor="@color/primary_light"
            android:elevation="@dimen/login_button_elevation"
            android:layout_margin="@dimen/splash_screen_padding"/>
</FrameLayout>